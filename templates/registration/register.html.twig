{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="rounded-md p-2 border-red-400 bg-red-50 border dark:border-red-600 dark:bg-red-700 dark:text-white mb-4" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-3xl flex justify-center pb-8">Register</h1>

    <h2 class="text-xl dark:text-gray-400 flex justify-center pb-8"> <a href="{{ path('app_login') }}">Already a user? Login</a> </h2>

    {{ form_start(registrationForm) }}
    <div  class="flex flex-col mx-40 text-center">
        <div>
            {{ form_label(registrationForm.email,"Enter your email",
                { "label_attr":
                    {"class":"block font-medium text-sm dark:text-gray-300 text-2xl "}
                })
            }}
            {{ form_widget(registrationForm.email,
                {"attr":
                    {"class":"block w-full shadow-sm border-gray-300 dark:border-transparent
                    dark:text-black field-text rounded-md border p-2 mt-1 mb-2"}
                })
            }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div>
            {{ form_label(registrationForm.plainPassword,"Enter desired password",
                { "label_attr":
                    {"class":"block font-medium text-sm dark:text-gray-300 text-2xl"}
                })
            }}
            {{ form_widget(registrationForm.plainPassword,
                {"attr":
                    {"class":"block w-full shadow-sm border-gray-300 dark:border-transparent
                    dark:text-black field-text rounded-md border p-2 mt-1 mb-2"}
                })
            }}
            {{ form_errors(registrationForm.plainPassword) }}

        </div>

        <div class="flex items-center mt-4 mb-4">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 rounded border-gray border text-indigo-300 mr-2'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'Agree to terms', {'label_attr': {'class': 'text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
        </div>

        <button type="submit" class="mt-4 dark:bg-indigo-600 px-12 py-2 rounded-md hover:dark:bg-indigo-400">Register</button>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
