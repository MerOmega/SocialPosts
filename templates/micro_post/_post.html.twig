<div class="bg-white bg-opacity-20 backdrop-blur-lg rounded drop-shadow-lg p-4">
    <div class="text-3xl">
        <a href="{{ path('app_micro_post_show',{post:post.id}) }}">{{ post.title }}</a>
    </div>
    <div class="flex items-center">
        <div class="text-sm dark:text-white pr-5">
            <a href="{{ path('app_profile',{id:post.author.id}) }}">{{ post.author.email }}</a>
        </div>
        <div class="dark:text-gray-400">
            {{ post.date | date("M j, Y") }}
        </div>
    </div>
    <div class="text-2xl dark:text-gray-400">
        {{ post.text }}
    </div>
    <div class="mt-1 flex">
        {% if post.likedBy.contains(app.user) %}
            <a href="{{ path('app_dislike', { id: post.id }) }}">
                Unlike <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ post.likedBy.count }}</span>
            </a>
        {% else %}
            <a href="{{ path('app_like',{id:post.id}) }}" class="mr-2">
                Likes <span class="px-2 py-0.5 rounded-md dark:bg-gray-700">{{ post.likedBy.count }}</span>
            </a>
        {% endif %}
        <p href="">
            Comments <span class="px-2 py-0.5 rounded-md dark:bg-gray-700">{{ post.comments.count }}</span>
        </p>
    </div>
    <div class="flex pt-4">
        <a class="mr-2" href="{{ path('app_micro_post_edit',{post:post.id}) }}">Edit</a>
        <a href="{{ path('app_micro_post_comment',{post:post.id}) }}">Comment</a>
    </div>
</div>