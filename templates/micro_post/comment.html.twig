{% extends 'base.html.twig' %}

{% block title %}Add Comment{% endblock %}

{% block body %}
    {{ include('micro_post/_post.html.twig',{post:post}) }}

    <div class="px-20">
        {{ form_start(form) }}
        <div class="error-class">
            {{ form_errors(form) }}
        </div>

        <div>
            {{ form_label(form.text,"Plase enter the comment",
                { "label_attr":
                    {"class":"block font-medium text-sm dark:text-gray-300"}
                })
            }}
            {{ form_widget(form.text,
                {"attr":
                    {"class":"block w-full shadow-sm border-gray-300 dark:border-transparent
                dark:text-black field-text rounded-md border p-2 mt-1 mb-2"}
                })
            }}
            {{ form_errors(form.text) }}
        </div>
        <div class="mt-2">
            <button type="submit"
                    class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4
                hover:bg-indigo-400
                rounded">Save Comment</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
