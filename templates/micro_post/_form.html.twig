
<div class="px-20">
    {{ form_start(form) }}
    <div class="error-class">
        {{ form_errors(form) }}
    </div>

    <div>
        {{ form_label(form.title,"Plase enter the title",
            { "label_attr":
                {"class":"dark:text-gray-300 font-bold"}
            })
        }}
        {{ form_widget(form.title,
            {"attr":
                {"class":"block w-full shadow-sm border-gray-300 dark:border-transparent
                dark:text-black field-text rounded-md border p-2 mt-1 mb-2"}
            })
        }}
        {{ form_errors(form.title) }}
    </div>
    <div>
        {{ form_label(form.text,"Plase enter the body text",
            { "label_attr":
                {"class":"block font-medium text-sm dark:text-gray-300 font-bold"}
            })
        }}
        {{ form_widget(form.text,
            {"attr":
                {"class":"block w-full shadow-sm border-gray-300 dark:border-transparent
                dark:text-black field-text rounded-md border p-2 mt-1 mb-2"}
            })
        }}
        {{ form_errors(form.text) }}
    </div>
    <div class="flex items-center mt-4">
        {{ form_widget(form.extraPrivacy, {'attr': {'class': 'h-4 w-4 rounded border-gray border text-indigo-300 mr-2'}}) }}
        {{ form_label(form.extraPrivacy, 'I want extra privacy', {'label_attr': {'class': 'text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
    </div>
    <div class="text-gray-400 dark:text-gray-500 mb-4 text-sm">
        This post can only be seen by the people that you follow.
    </div>
    <div class="mt-2">
        <button type="submit"
                class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4
                hover:bg-indigo-400
                rounded">Save it</button>
    </div>
    {{ form_end(form) }}
</div>